/*------------------------------------------------------------------------------
*
*  Header
*
------------------------------------------------------------------------------*/

header
  height: 400px
  width: 100%
  padding: 1.25rem 0
  text-align: center
  background-image: url('../img/header-bg.png')
  background-color: $dark-gray
  background-position: center
  background-repeat: no-repeat
  color: white

  .button-large
    color: $sky-blue-dark

  .logo
    margin-top: 40px

  h2
    margin: 6rem 0 .625rem 0
    font-weight: $font-weight-regular
    font-size: $font-size-mega

  p
    margin-top: 0
    font-size: $font-size-large
    color: rgba(white, .85)

  div.language
    position: absolute
    top: 10px
    left: 10px 
    img
      margin: 4px
      float: left

  nav
    margin-top: 30px
    text-align: center
    li
      display: inline
      list-style: none
    a
      color: white
      text-transform: uppercase
      margin: 0 20px
      
      .selected
        text-decoration: underline

/* Responsive */

@media $smartphone
  header

    nav 
      ul
        padding: 0
      li
        margin-bottom: 8px
        display: block

    .logo
      zoom: 50%

    h2
      font-size: $font-size-h3
      margin: 5.5rem 0 .625rem 0

    p
      font-size: $font-size-h4
